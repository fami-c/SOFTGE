<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOFTGE.Views.NewItem">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Cadastrar novo produto"
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="400,0,400,20"/>

            <Label Text="Nome"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="NameEntry"
                   Placeholder="Digite seu nome"
                   Keyboard="Text"
                   Margin="400,0,400,20"/>

            <Label Text="ID"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="IdEntry"
                   Placeholder="Digite seu ID"
                   Keyboard="Numeric"
                   Margin="400,0,400,20"/>

            <Label Text="Selecione a categoria do produto:"                    
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Picker x:Name="OptionsPicker" Title="Escolha uma opção" Margin="400,0,400,20"/>

            <Label Text="Validade"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="ValEntry"
                   Placeholder="Digite a validade"
                   Keyboard="Numeric"
                   Margin="400,0,400,20"/>
            
            <Label Text="Fornecedor"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="SupEntry"
                   Placeholder="Digite o fornecedor"
                   Keyboard="Text"
                   Margin="400,0,400,20"/>

            <Label Text="Locação"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="LocEntry"
                   Placeholder="Digite o lote"
                   Keyboard="Text"
                   Margin="400,0,400,20"/>

            <Label Text="Quantidade"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="QtEntry"
                   Placeholder="Digite a quantidade"
                   Keyboard="Numeric"
                   Margin="400,0,400,20"/>

            <Label Text="Valor"
                   FontSize="16"
                   Margin="400,0,400,20"/>
            <Entry x:Name="PrEntry"
                   Placeholder="Digite o valor"
                   Keyboard="Numeric"
                   Margin="400,0,400,20"/>

            <Button Text="Enviar"
                    Clicked="OnSubmitClicked"
                    Margin="600,40,600,20"/>
        </StackLayout>
    </ScrollView>
</ContentPage>